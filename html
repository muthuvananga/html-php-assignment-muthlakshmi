    <html>
<head>
  <title>Welcome Greeting Form</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: lightblue; /* Page background */
      padding: 50px;
    }
    .form-container {
      background-color: white;     /* Form background */
      width: 400px;
      margin: auto;
      padding: 25px;
      border: 2px solid gray;
      box-shadow: 0 0 15px gray;   /* Shadow color */
      border-radius: 10px;
    }
    h2 {
      text-align: center;
      color: darkblue;
    }
    label {
      font-weight: bold;
    }
    input[type="text"] {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      margin-bottom: 15px;
      border: 1px solid gray;
      border-radius: 5px;
    }
    input[type="submit"] {
      background-color: darkgreen;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      width: 100%;
      font-size: 16px;
    }
    input[type="submit"]:hover {
      background-color: green;
    }
    #message {
      margin-top: 20px;
      font-size: 18px;
      text-align: center;
      font-weight: bold;
    }
    .error {
      color: red;
    }
    .success {
      color: darkgreen;
    }
  </style>
</head>
<body>

  <div class="form-container">
    <h2>Greeting Application</h2>
    <form onsubmit="return showGreeting()">
      <label for="username">Enter Your Name:</label>
      <input type="text" id="username" name="username" placeholder="Type your name here">
      <input type="submit" value="Submit">
    </form>
    <div id="message"></div>
  </div>

  <script>
    function showGreeting() {
      const nameInput = document.getElementById("username");
      const messageDiv = document.getElementById("message");
      const name = nameInput.value.trim();

      if (name === "") {
        messageDiv.innerHTML = "Please enter your name.";
        messageDiv.className = "error";
      } else {
        messageDiv.innerHTML = "Hello " + name + ", Welcome to Everyone!<br>Have a nice day!!";
        messageDiv.className = "success";
      }

      return false; // Prevent form submission and page reload
    }
  </script>

</body>
</html>

